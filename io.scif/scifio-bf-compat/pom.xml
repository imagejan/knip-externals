<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<properties>
		<bundle.parent>io.scif</bundle.parent>
		<bundle.name>scifio-bf-compat</bundle.name>
		<bundle.version>${scifio-bf-compat.version}</bundle.version>
		<export.contents>io.scif.bf.*,loci.*,ome.xml.*,io.scif.ome.*</export.contents>
	</properties>

	<parent>
		<groupId>org.knime.knip</groupId>
		<artifactId>io.scif</artifactId>
		<version>1.0.0</version>
	</parent>

	<artifactId>${bundle.name}</artifactId>
	<name>${bundle.name}</name>
	<version>${bundle.version}</version>

	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>${bundle.parent}</groupId>
			<artifactId>${bundle.name}</artifactId>
			<version>${bundle.version}</version>
		</dependency>

		<dependency>
			<groupId>ome</groupId>
			<artifactId>formats-bsd</artifactId>
			<version>${bio-formats.version}</version>
		</dependency>

		<dependency>
			<groupId>ome</groupId>
			<artifactId>formats-gpl</artifactId>
			<version>${bio-formats.version}</version>
		</dependency>

		<dependency>
			<groupId>io.scif</groupId>
			<artifactId>scifio</artifactId>
			<version>${scifio.version}</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.scijava</groupId>
			<artifactId>scijava-common</artifactId>
			<version>${scijava-common.version}</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>net.imglib2</groupId>
			<artifactId>imglib2</artifactId>
			<version>${imglib2.version}</version>
			<type>bundle</type>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Require-Bundle>
							scifio;bundle-version="${scifio.version}",
							scijava-common;bundle-version="${scijava-common.version}",
							imglib2;bundle-version="${imglib2.version}"
						</Require-Bundle>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>imagej.public</id>
			<url>http://maven.imagej.net/content/groups/public</url>
		</repository>
	</repositories>

</project>
